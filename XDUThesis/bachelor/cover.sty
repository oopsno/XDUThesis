\NeedsTeXFormat{LaTeX2e}

% LaTeX3
\RequirePackage{expl3}
\RequirePackage{graphicx}
\ProvidesExplPackage{cover}{2016/05/21}{0.1.0}{XDUThesis/bachelor 封面}

% 全局结构
\seq_new:c  { g_seq_cover_items }
\prop_new:c { g_prop_cover_item_value }
\prop_new:c { g_prop_cover_item_name  }

% 定义条目名称
\seq_put_right:cn { g_seq_cover_items } { title   }
\seq_put_right:cn { g_seq_cover_items } { college }
\seq_put_right:cn { g_seq_cover_items } { major   }
\seq_put_right:cn { g_seq_cover_items } { author  }
\seq_put_right:cn { g_seq_cover_items } { advisor }
\seq_put_right:cn { g_seq_cover_items } { class   }
\seq_put_right:cn { g_seq_cover_items } { id      }

% 封面主体条目
\seq_new:c { g_seq_cover_core_items }
\seq_set_eq:cc { g_seq_cover_core_items } { g_seq_cover_items }
\seq_pop_right:cNTF { g_seq_cover_core_items } { \l_tmp } { } { }
\seq_pop_right:cNTF { g_seq_cover_core_items } { \l_tmp } { } { }

% 配置接口
\cs_new:Npn \cover_item_set_name:nn #1#2
  {
    \str_const:cn { c_cover_item_name_#1 }  { #2 }
    \prop_put:cnn { g_prop_cover_item_name } { #1 } { #2 }
  }

% 用户接口
\cs_new:Npn \cover_set:n #1
  {
    \keys_set:nn { cover } { #1 }
  }

\cs_new:Npn \cover_item_new:n #1
  {
    \keys_define:nn { cover }
      {
        #1 .value_required:n = true,
        #1 .code:n =
          {
            \prop_put:cnn { g_prop_cover_item_value } { #1 } { ##1 }
          }
       }
  }

% 程控接口
\cs_new:Npn \l__cover_item_name:n #1
{
  \group_begin:
  \prop_get:cnN { g_prop_cover_item_name } { #1 } { \lv }
  \lv
  \group_end:
}

\cs_new:Npn \l__cover_item_value:n #1
{
  \group_begin:
  \prop_get:cnN { g_prop_cover_item_value } { #1 } { \lv }
  \lv
  \group_end:
}

\seq_map_function:cN { g_seq_cover_items } { \cover_item_new:n }

% 导出标题
\cs_new:Npn \thesis_info:n #1
  {
    \l__cover_item_value:n { #1 }
  }

% 私有函数 创建一个blank
\cs_new:Npn \l__cover_blank:nn #1#2
  {
    \underline { \makebox [ #2 ] [ c ] { #1 } }
  }

% 支持自动折行的"题目"
\cs_new:Npn \l__cover_title_item:
  {
    \group_begin:
    \prop_get:cnN { g_prop_cover_item_name  } { title } { \l_name  }
    \prop_get:cnN { g_prop_cover_item_value } { title } { \l_value }
    \int_compare:nNnTF { \str_count:N  { \l_value } } { > } { 28 }
      {
        \msg_interrupt:nnn { 标题过长 } { 标题``\l_value''超过28字限制 } { 按H也救不了你 哼╭(╯^╰)╮ }
      }
      { }
    \vskip 1cm
    {
      \bfseries\songti\zihao{3}
      \l_name \hspace{1em}
    }
    {
      \bfseries\heiti\zihao{3}
      \l__cover_blank:nn { \str_range:Nnn { \l_value } { 1 } { 14 } } { 240pt }
      \vskip -1em
      \hspace{5em} \l__cover_blank:nn { \str_range:Nnn { \l_value } { 15 } { 28 } } { 240pt }
    }
    \group_end:
  }

\cs_new:Npn \l__cover_core_item:n #1
  {
    \str_if_eq:nnTF { #1 } { title }
      {
        \l__cover_title_item:
      }
      {
        \vskip -0.5em
        { \bfseries\songti\zihao{3} \l__cover_item_name:n { #1 } }
        { \songti\zihao{-3} \hspace{1em} \l__cover_blank:nn  { \l__cover_item_value:n { #1 } } { 240pt } }
      }
  }

\cs_new:Npn \l__cover_corner_item:n #1
  {
    {
      \bfseries\songti\zihao{-4}\ziju{0.5} \l__cover_item_name:n { #1 }
      \hspace{1em}
      \l__cover_blank:nn { \l__cover_item_value:n { #1 } } { 55pt }
    }
  }

% 构造封面
\cs_new:Nn \cover_make:
  {
    \clearpage
    \newgeometry{left=3cm,right=3cm,top=2.54cm,bottom=2.54cm}
    \thispagestyle{empty}
    \begin{flushright}
      \l__cover_corner_item:n { class } \\
      \l__cover_corner_item:n { id    }
    \end{flushright}
    \begin{center}
      \vskip 0.5cm
        \includegraphics[width=7.5cm]{xdu_logo_text}
      \vskip 0cm
        \heiti\zihao{0}\ziju{0.125} \l__cover_item_name:n { type } \ziju{0}
      \vskip 1.5cm
        \includegraphics[width=4cm]{xdu_logo_graph}
      \seq_map_function:cN { g_seq_cover_core_items } { \l__cover_core_item:n }
    \end{center}
    \restoregeometry
  }

% 加载封面条目
\include{XDUThesis/bachelor/cover.cfg}

% 调试接口
\cs_new:Nn \cover_debuginfo:
  {
    \group_begin:
    \section { 封面信息 }
    \begin { itemize }
    \seq_map_inline:cn { g_seq_cover_items }
      {
        \item { \l__cover_item_name:n { ##1 } {\quad} - {\quad} \l__cover_item_value:n { ##1 } }
      }
    \end{ itemize }
    \group_end:
  }
